    <script>
        const dropArea = document.getElementById("dropArea");
        const fileInput = document.getElementById("fileInput");
        const preview = document.getElementById("preview");
        const uploadText = document.getElementById("uploadText");
        let c = document.querySelector(".reduceMotionToggleInput");
        let svg = document.querySelector(".svg");
        let load = document.querySelector(".load");
        let submit = document.querySelector(".submit");
        let isPublic = document.querySelector(".isPublic");
        let discription = document.querySelector(".discription");
        let postname = document.querySelector(".postname");
        let songInput = document.getElementById("songInput");
        let songPreview = document.getElementById("songPreview");
        let songFile = null;

        let imgFile = null;

        songInput.addEventListener("change", () => {
            if (!songInput.files[0]) return;

            songFile = songInput.files[0];
            songPreview.src = URL.createObjectURL(songFile);
            songPreview.classList.remove("hidden");
        });

        fileInput.addEventListener("change", function (e) {
            if (this.files[0]) showPreview(this.files[0]);
        });

        dropArea.addEventListener("dragover", (e) => {
            e.preventDefault();
            dropArea.classList.add("border-blue-500");
        });

        dropArea.addEventListener("dragleave", () => {
            dropArea.classList.remove("border-blue-500");
        });

        dropArea.addEventListener("drop", (e) => {
            e.preventDefault();
            dropArea.classList.remove("border-blue-500");

            let file = e.dataTransfer.files[0];
            fileInput.files = e.dataTransfer.files;

            if (file) showPreview(file);
        });

        function showPreview(file) {
            const reader = new FileReader();
            reader.onload = () => {
                preview.src = reader.result;
                preview.classList.remove("hidden");
                uploadText.classList.add("hidden");
            };
            imgFile = file;
            reader.readAsDataURL(file);
        }

        submit.addEventListener('click', async () => {
            load.classList.remove('invisible');
            let dta = new FormData();

            if (songFile) {
                dta.append("song", songFile);
            }
            dta.append("post", imgFile);
            dta.append("postname", postname.value);
            dta.append("discription", discription.value);
            dta.append("isPublic", isPublic.checked)

            let response = await fetch("/post/post", {
                method: "POST",
                body: dta
            });

            let data = await response.json();

            if (data.success) {
                load.classList.add('invisible');
                window.location.href = data.redirect;
            }
        });
    </script>
